{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@context/*": ["context/*"],
            "@api/*": ["api/*"]
        },
        "types": ["vite/client"],
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src/**/*", "vite.config.ts"],
    "exclude": ["node_modules"]
}
